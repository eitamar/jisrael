<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.1" type="template" client="administrator">
	<name>jisrael</name>
	<version>1.0.1</version>
	<creationDate>5/11/2014</creationDate>
	<author>Itamar Elharar</author>
	<authorEmail>eitamar@j-guru.org</authorEmail>
	<copyright>Copyright (C) 2014 Itamar Elharar. All rights reserved.</copyright>
	<description>TPL_JISRAEL_XML_DESCRIPTION</description>
	<files>
		<filename>component.php</filename>
		<filename>cpanel.php</filename>
		<filename>favicon.ico</filename>
		<filename>index.php</filename>
		<filename>login.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<folder>css</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>img</folder>
		<folder>js</folder>
		<folder>language</folder>
	<folder>less</folder>
	</files>
	<positions>
		<position>menu</position>
		<position>submenu</position>
		<position>toolbar</position>
		<position>title</position>
		<position>status</position>
		<position>icon</position>
		<position>sidebar</position>
		<position>cp_shell</position>
		<position>cpanel</position>
		<position>bottom</position>
		<position>footer</position>
		<position>login</position>
		<position>debug</position>
	</positions>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_jisrael.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_jisrael.sys.ini</language>
		<language tag="he-IL">he-IL/he-IL.tpl_jisrael.ini</language>
		<language tag="he-IL">he-IL/he-IL.tpl_jisrael.sys.ini</language>
                <language tag="ar-AA">ar-AA/ar-AAL.tpl_jisrael.ini</language>
		<language tag="ar-AA">ar-AA/ar-AA.tpl_jisrael.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="login">
				<field name="loginTemplateColor" class="" type="color" default="#165387"
				validate="color"
				label="TPL_JISRAEL_LOGIN_BACKGROUND_COLOR_LABEL"
				description="TPL_JISRAEL_LOGIN_BACKGROUND_COLOR_DESC" />
				
				<field name="loginTemplateColor2" class="" type="color" default="#142849"
				validate="color"
				label="TPL_JISRAEL_LOGIN_BACKGROUND_COLOR2_LABEL"
				description="TPL_JISRAEL_LOGIN_BACKGROUND_COLOR2_DESC" />
				
				<field name="loginLogoFile" class="" type="media" default=""
				label="TPL_JISRAEL_LOGIN_LOGO_LABEL"
				description="TPL_JISRAEL_LOGIN_LOGO_DESC" />
				
				<field name="loginCustomText" type="textarea" default="" 
					label="TPL_JISRAEL_LOGIN_CUSTOM_TEXT_LABEL" description="TPL_JISRAEL_LOGIN_CUSTOM_TEXT_DESC" 
					rows="5" cols="30" />

			</fieldset>
			
			<fieldset name="advanced">

				<field name="templateColor" class="" type="color" default="#13294A"
				validate="color"
				label="TPL_JISRAEL_COLOR_LABEL"
				description="TPL_JISRAEL_COLOR_DESC" />
				
				<field name="headerColor" class="" type="color" default="#34373c"
				validate="color"
				label="TPL_JISRAEL_COLOR_HEADER_LABEL"
				description="TPL_JISRAEL_COLOR_HEADER_DESC" />

				<field name="sidebarColor" class="" type="color" default="#0088CC"
				validate="color"
				label="TPL_JISRAEL_COLOR_SIDEBAR_LABEL"
				description="TPL_JISRAEL_COLOR_SIDEBAR_DESC" />

				<field name="logoFile" class="" type="media" default=""
				label="TPL_JISRAEL_LOGO_LABEL"
				description="TPL_JISRAEL_LOGO_DESC" />

				<field name="admin_menus" type="radio"
				class="btn-group btn-group-yesno"
				default="1"
				label="TPL_JISRAEL_FIELD_ADMIN_MENUS_LABEL"
				description="TPL_JISRAEL_FIELD_ADMIN_MENUS_DESC"
				filter="integer">
				<option
					value="1">JYES</option>
				<option
					value="0">JNO</option>
				</field>

				<field name="displayHeader" type="radio"
				class="btn-group btn-group-yesno"
				default="1"
				label="TPL_JISRAEL_HEADER_LABEL"
				description="TPL_JISRAEL_HEADER_DESC"
				filter="integer">
				<option
					value="1">JYES</option>
				<option
					value="0">JNO</option>
				</field>

				<field name="statusFixed" type="list"
				default="1"
				label="TPL_JISRAEL_STATUS_LABEL"
				description="TPL_JISRAEL_STATUS_DESC"
				filter="integer">
				<option
					value="1">TPL_JISRAEL_STATUS_BOTTOM</option>
				<option
					value="0">TPL_JISRAEL_STATUS_TOP</option>
				</field>

				<field name="stickyToolbar" type="radio"
				class="btn-group btn-group-yesno"
				default="1"
				label="TPL_JISRAEL_STICKY_LABEL"
				description="TPL_JISRAEL_STICKY_DESC"
				filter="integer">
				<option
					value="1">JYES</option>
				<option
					value="0">JNO</option>
				</field>
				
				<field name="font" type="radio"
				class="btn-group btn-group-yesno"
				default="alef"
				label="TPL_JISRAEL_FIELD_FONT_LABEL"
				description="TPL_JISRAEL_FIELD_FONT_DESC"
				>
				<option
					value="alef">TPL_JISRAEL_FONT_ALEF</option>
				<option
					value="opensans">TPL_JISRAEL_FONT_OPENSANS</option>
				</field>

			</fieldset>
		</fields>
	</config>
</extension>